.content-section.clearfix
  .content-section__title Новости
    a(href="#") Все новости
  .news
    .row.clearfix
      each item,index in news
        .news-block.col-phone-1-2.col-tablet-1-3.col-tablet-offset-1-2
          .news-block__img
            img(src='../img/news-img'+index+'.png')
            .news-block__button
              a(href=item.href) читать...
          .news-block__date
            a(href="#")=item.date
          .news-block__title
            a(href=item.href)=item.title
        -if((index+1)%2==0)
          .clearfix.show-tablet
        


