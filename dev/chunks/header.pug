.header
  .header__menu.clearfix 
    .wrapper
      .row
        include menu 
        .search-box.show-tablet-float-right
          .search-box__input
            input(type="text")
          .search-box__button
            button
  .header__content
    .wrapper
      .row.clearfix
        .col-tablet-2-4
          .logo
            .logo__img
              a(href="index.html")
                img(src="../img/logo.png")
            .logo__title Интернет-магазин цветов
        .col-tablet-1-4
          .contacts
            .contacts__address.
              г. Челябинск, ул. Воровского, 30А
            .contacts__mail
              a(href='mailto:buket@mail.ru') e-mail: buket@mail.ru
            .contacts__tel
              a(href='tel:8(351) 567 21 46')| 8(351) 
                span 567 21 46
        .col-tablet-1-4
          .basket.basket_tablet
            .basket__button
              a(href="order.html")
                img(src='../img/basket.png')
  .header__nav-menu
    .wrapper
      .row
        ul.nav-menu
          each item, index in navMenu
            li
              a(href=item.href)
                .img-holder
                  img(src="../img/header-menu-img"+index+".png")
                .title=item.title

