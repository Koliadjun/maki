.reviews
  .reviews__title Отзывы покупателей
  .reviews__count 2 отзива
  .clearfix
  .reviews__holder
    each item,index in reviews
      .review
        .review__date
          a(href="#")=item.date
        .review__author=item.author
        .review__rating
          .rate-input
            .rate-input__inner
              input(type="hidden" name="rating")
        .clearfix
        .review__text
          span=item.text
  .reviews__show-more
    a(href='#') Показать еще
  .reviews__input-title Написать отзыв:
  form()
    .reviews__rate
      .rate-input
        .rate-input__inner
          input(type="hidden" name="rating")
    .clearfix
    .reviews__input
      input(type="text")
    .reviews__button
      .button
        button отправить
